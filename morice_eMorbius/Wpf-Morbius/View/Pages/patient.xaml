<UserControl x:Class="Wpf_Morbius.View.Pages.Patient"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary Source="/Assets/MasterStyle.xaml"/>
    </UserControl.Resources>
    <Grid Name="content">
        <TextBlock Text="{Binding BasicInformation}"  Style="{StaticResource Title}"/>
        <mui:ModernTab SelectedSource="View/Pages/PatientDetails.xaml" Layout="Tab" Margin="10,60,0,0" >
            <mui:ModernTab.Links>
                <mui:Link DisplayName="Résumé" Source="View/Pages/PatientDetails.xaml"/>
                <mui:Link DisplayName="Obs." Source="View/Pages/PatientObs.xaml" />
                <mui:Link DisplayName="Pouls" Source="View/Pages/PatientPulse.xaml" />
                <mui:Link DisplayName="Temp." Source="View/Pages/PatientTemp.xaml" />
            </mui:ModernTab.Links>
        </mui:ModernTab>


    </Grid>
</UserControl>
