<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:mui="http://firstfloorsoftware.com/ModernUI"
                    xmlns:app="clr-namespace:Wpf_Morbius">
    
    <app:ImageConverter x:Key="imageConverter" />
    <app:BoolColorConverter x:Key="colorConverter"/>
    <app:BoolConnectedConverter x:Key="stringConverter"/>
    <app:UserVisibilityConverter x:Key="userConverter"/>

    <Style x:Key="Title" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontSize" Value="23"/>
        <Setter Property="Background" Value="AliceBlue" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="TextAlignment" Value="Right"/>
        <Setter Property="Padding" Value="0,0,20,0"/>
        <Setter Property="Margin" Value="10,0,10,0"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
    </Style>

    <Style x:Key="ObsTitle" TargetType="TextBlock" BasedOn="{StaticResource Title}">
        <Setter Property="FontSize" Value="16"/>
    </Style>

    <Style x:Key="Info" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="TextAlignment" Value="Right"/>
        <Setter Property="Padding" Value="2"/>
    </Style>

    <Style x:Key="Content" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="TextAlignment" Value="Justify"/>
        <Setter Property="Padding" Value="2"/>
    </Style>

    <Style x:Key="Error" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="TextWrapping" Value="WrapWithOverflow"/>
        <Setter Property="Foreground" Value="Red"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <Style x:Key="Success" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="TextWrapping" Value="WrapWithOverflow"/>
        <Setter Property="Foreground" Value="Green"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>




</ResourceDictionary>